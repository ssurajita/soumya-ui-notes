reducer.js
==========
export const reducer = (state,action) => {
    switch(action.type){
        case "EDIT_INFO" :
            state = Object.assign(
                {},state,{
                    editInfo : action.payload
            });
            console.log("state.....",state)
            break;
        case "USERS":
        	ServerCall.fnGetReq('student/get-std')
        	.then((res)=>{
        		state = Object.assign(
                {},state,{
                    //users : action.users
                    users : res.data
            	})
            	return state;
        	}).catch((err)=>{
        		state = Object.assign(
                {},state,{
                    //users : action.users
                    users : []
            	})
            	return state;	
        	})
            
            break;
        default:
            //state
            break;
    }
    return state;
}


