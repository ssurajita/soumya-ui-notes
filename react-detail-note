hero.jsx
========
import './Hero.css';
import React from 'react';

function template() {
  if (this.props.name === 'joker') {
    throw new Error('You are not a hero...');
  }
  return (
    <div className='hero'>
      <h1>You are the hero...{this.props.name}</h1>
    </div>
  );
}

export default template;



