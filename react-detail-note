render(){
              return <div>
                   <p> 
                      No1:<input ref="n1Ref" />
                    </p>
                    <p> 
                      No2:<input ref="n2Ref" />
                    </p>
                    <p>
                        <input type='button' value='sum' onClick={this.fnAdd} />
                    </p>
                    <h1>Sum is: <span style={{color:this.state.clr}}> {this.state.sum}</span></h1>
                    <h1>Sum is: <span className={this.state.sum > 100 ? 'cr':'cg'}> {this.state.sum}</span></h1>
                    
                </div>
          }

