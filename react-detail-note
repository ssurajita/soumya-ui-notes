regValidations.js
====================
const regvalidations = (data) => {
    let errors={};
    if (!data.u) {
      errors.u="please enter uid"
    }
    if (!data.p) {
        errors.p="please enter password"
    }
    if(!data.e){
        errors.e="please enter email"
    }
    return errors;
}

export default regvalidations;


