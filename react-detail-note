	class C extends React.Component{
		render(){
			return <div>
				<h1>{this.props.n}</h1>
				<h1>{this.props.l}</h1>
			</div>
		}
	}
	mapStateToProps = (state) => {
		return {
			n : state.name,
			l : state.loc
		}
	}
	export default connect(mapStateToProps)(C);

