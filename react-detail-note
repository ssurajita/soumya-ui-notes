			//Loader.jsx
			==============   
			import React from "react";
			function template() {
  				return (
    				<>
      					<div className="mask"></div>
      					<div><img src="loader.gif" /></div>
    				</>
  				);
			};
			export default template;
	
 			//Loader.css
 			===========
 			.mask{
    			position: fixed;
    			left: 0;
    			top: 0;
    			width: 100%;
    			height: 100%;
    			background: black;
    			opacity: 0.5;
			}
			.mask+div{
    			position: absolute;
    			left: 0;
    			right: 0;
    			text-align: center;
    			top: 125px;
			}


