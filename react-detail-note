			import TableComp from '../reuseableComponents/TableComp/index'
			function template() {
			  return (
    			<div className="users">
      			<h1>Users</h1>
      			{
        			this.state.data.length === 0 ? <Loader /> :  <TableComp  
        				h={this.state.headers}
        				d={this.state.data}
        				k={this.state.keys}
     				/> 
      			}
    
    			</div>
  			 );
			};
			export default template;

				
