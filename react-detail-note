import React from 'react';
import TextBox from "./TextBox";
const Register = () => {
    const fnRegister = () =>{
        
    }
    return <div>
        	<TextBox lbl="Uid" type="text" />
        	<TextBox lbl="Password" type="password" />
        	<TextBox lbl="Email" type="email" />
        	<TextBox lbl="Phone" type="number" />
