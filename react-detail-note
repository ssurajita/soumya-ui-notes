styles.css
===========
.header{
    font-size: 60px;
    font-weight: bold;
    font-style: italic;
    text-align: center;
    background:yellow;
}
body{
    margin: 0px;
}
.footer{
    position: fixed;
    bottom: 0px;
    text-align: center;
    width: 100%;
    background: yellow;
    font-size: 20px;
    font-weight: bold;
    font-style: italic;
}
